<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".user.PemesananUser">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="tanggal"
                android:singleLine="true"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/idpemesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint=""
                android:singleLine="true"
                android:text="id"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white" />



            <Spinner
                android:id="@+id/namaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                android:entries="@array/MakananSapi"
                app:met_textColorHint="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/jml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="jumlah"
                android:singleLine="true"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="harga"
                android:singleLine="true"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"

                app:met_textColorHint="@color/white" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="total"

                android:singleLine="true"
                android:textSize="16sp"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pesan"
                    android:background="@color/holo_orange"
                    android:id="@+id/btnpesan"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Riwayat"
                    android:background="@color/holo_orange"
                    android:id="@+id/btnbatal"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>